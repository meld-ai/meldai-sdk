{
  "name": "@meldai/sdk",
  "version": "1.0.0",
  "description": "Official TypeScript SDK for Meld.ai",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest --passWithNoTests",
    "check-types": "tsc --noEmit",
    "docs": "typedoc",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-prettier": "prettier --check \"**/*.{ts,tsx,md}\"",
    "prepublishOnly": "npm run build && npm run lint",
    "example": "tsx scripts/example.ts",
    "example-dist": "tsx scripts/example-dist.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meld-ai/meldai-core.git",
    "directory": "typescript"
  },
  "bugs": {
    "url": "https://github.com/meld-ai/meldai-core/issues"
  },
  "homepage": "https://github.com/meld-ai/meldai-core#readme",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "meld",
    "ai",
    "workflow",
    "sdk",
    "typescript",
    "javascript",
    "automation"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.18.3",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.6.4",
    "prettier": "^3.4.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "tsx": "^4.7.0",
    "typedoc": "^0.26.0",
    "typescript": "^5.7.2"
  }
}
