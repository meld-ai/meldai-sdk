{
  "name": "@meldai/sdk",
  "version": "1.2.0",
  "description": "Official TypeScript SDK for Meld.ai",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check-types": "tsc --noEmit",
    "docs": "typedoc",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-prettier": "prettier --check \"**/*.{ts,tsx,md}\"",
    "prepublishOnly": "npm run build && npm run lint",
    "example": "tsx scripts/example.ts",
    "example-dist": "tsx scripts/example-dist.ts",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meld-ai/meldai-sdk.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/meld-ai/meldai-sdk/issues"
  },
  "homepage": "https://github.com/meld-ai/meldai-sdk#readme",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.6"
  },
  "keywords": [
    "meld",
    "ai",
    "workflow",
    "sdk",
    "typescript",
    "javascript",
    "automation"
  ],
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@jest/globals": "^29.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^10.0.6",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.18.3",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "semantic-release": "^22.0.12",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "tsx": "^4.7.0",
    "typedoc": "^0.26.0",
    "typescript": "^5.7.2"
  }
}
